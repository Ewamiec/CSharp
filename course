using System;

namespace GradeBook
{
    class Program
    {
        static void Main(string[] args)
        {
            int x = 18;
            int y = 9;
            {    
            Console.WriteLine($"Hello, the sum is {x + y}");
            }
        }
    }
}

//----------------------------------------------------
//Code - first result, var, cw

using System;

namespace GradeBook
{
    class Program
    {
        static void Main(string[] args)
        {
            var x = 34.1;
            var y = 10.3;
            var result = x + y;
            Console.WriteLine(result);

            if(args.Length > 0)
            {    
                Console.WriteLine($"Hello, {args[0]}!");
            }            

            else
            {    
            Console.WriteLine("Hello, how should I call you?");
            }
        }
    }
}

