using System;

namespace GradeBook
{
    class Program
    {
        static void Main(string[] args)
        {
            if (args.Length > 0)
            {    
            Console.WriteLine($"Hello, {args[0]}!");
            }
            else
            {
            Console.WriteLine($"Hello, please tell me your name!");
            }
        }
    }
}

